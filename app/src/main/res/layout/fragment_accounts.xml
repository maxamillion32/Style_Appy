<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="top|center">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:layout_marginBottom="45dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center">

        <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please register your details below"
            android:id="@+id/textView12"
            geekui:customTypeface="fonts/Tahoma.ttf"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center" />

        <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All fields marked with an asterix are compulsory "
            android:id="@+id/tyyt"
            geekui:customTypeface="fonts/Tahoma.ttf"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:gravity="center"
            android:enabled="false" />



        <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Details :"
            android:id="@+id/deta"
            geekui:customTypeface="fonts/Tahoma.ttf"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="left|center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="Full Name *"
            android:inputType="textCapSentences"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textSize="18dp"
            android:singleLine="true"
            android:theme="@style/Base.V12.Widget.AppCompat.EditText"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phnno"
            android:hint="Phone Number *"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"

            android:background="@android:color/transparent"
            android:textSize="18dp"
            android:inputType="number"
            android:theme="@style/Base.V12.Widget.AppCompat.EditText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="Email *"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:textSize="18dp"
            android:inputType="textCapSentences|textWebEmailAddress"
            android:singleLine="true"
            android:theme="@style/Base.V12.Widget.AppCompat.EditText"/><![CDATA[

        EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:hint="Password *"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:fontFamily="@string/mdtp_sans_serif"
            android:background="@android:color/transparent"
            android:textSize="18dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:theme="@style/Base.V12.Widget.AppCompat.EditText"/>

        ]]>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:hint="Change Password *"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:fontFamily="@string/mdtp_sans_serif"
            android:background="@android:color/transparent"
            android:textSize="18dp"
            android:singleLine="true"
            android:theme="@style/Base.V12.Widget.AppCompat.EditText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp" />


    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/buttonwidth"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bgforsr2"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:id="@+id/save">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView3"
            android:layout_marginLeft="5dp"
            android:background="@drawable/save" />

        <views.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/sav"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            geekui:customTypeface="fonts/Tahoma.ttf"
            android:padding="10dp" />
    </LinearLayout>

    <views.ProgressWheel
        android:id="@+id/pb11"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="@color/colorAccent"
        wheel:matProg_progressIndeterminate="true"
        android:layout_gravity="center"/>
</FrameLayout>